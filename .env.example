# Application
NODE_ENV=production
FRONTEND_URL=https://layercake.dev
BACKEND_URL=https://api.layercake.dev
PORT=3000

# Database
DATABASE_URL=postgresql://layercake:password@postgres:5432/layercake
POSTGRES_USER=layercake
POSTGRES_PASSWORD=change_me_in_production
POSTGRES_DB=layercake

# Redis
REDIS_URL=redis://redis:6379

# Authentication
JWT_SECRET=your-secret-key-here-change-in-production
JWT_EXPIRATION=7d
GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret
GITHUB_CALLBACK_URL=https://layercake.dev/auth/github/callback

# AI Providers
CLAUDE_API_KEY=sk-ant-your-key-here
OPENAI_API_KEY=sk-your-key-here

# Integrations
GITHUB_TOKEN=ghp_your-personal-access-token
RAILWAY_API_KEY=your-railway-api-key

# Storage (Cloudflare R2 or AWS S3)
STORAGE_PROVIDER=r2
# Cloudflare R2
R2_ACCOUNT_ID=your-account-id
R2_ACCESS_KEY=your-access-key
R2_SECRET_KEY=your-secret-key
R2_BUCKET=layercake-artifacts
# AWS S3 (alternative)
S3_BUCKET=layercake-artifacts
S3_REGION=us-east-1
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key

# Billing
STRIPE_SECRET_KEY=sk_test_your-key-here
STRIPE_PUBLISHABLE_KEY=pk_test_your-key-here
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_PRICE_PRO=price_pro_monthly
STRIPE_PRICE_TEAM=price_team_monthly

# Observability & Monitoring
SENTRY_DSN=https://your-sentry-dsn@o123456.ingest.sentry.io/7890123
OTEL_EXPORTER_OTLP_ENDPOINT=http://tempo:4318
OTEL_SERVICE_NAME=layercake
POSTHOG_API_KEY=phc_your-posthog-api-key
POSTHOG_HOST=https://app.posthog.com

# Grafana
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=15m

# WebSocket
WS_PORT=3001
